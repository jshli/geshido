<section class="dashboard-section">
  <div class="sidebar">
    <div class="logo-btn">
      <img src="/imgs/logo.svg" alt="" srcset="">
    </div>
    <div>
      <a class="nav-link" href="/tasks">Tasks</a>
      <a class="nav-link" href="/projects">Projects</a>
    </div>
  </div>
  <div class="dashboard-main">
    <h2 class="section__header">Projects</h2>
        <div class="projects-wrap">     
            <a class="project-card add-project-btn" href="/project/new">
                <i class="fas fa-plus"></i>
            </a>
            <%@project.each do |project|%>
              <a class="project-btn" href="/project/<%=project[:name]%>">
                <div class="project-card">
                  <div class="pie-wrapper progress-half">
                    <div class="pie">

                    </div>
                  </div>
                  <div>
                    <h4><%=project[:name]%></h4>
                    <p><%=@tasks.where(project_id: project[:id]).length%> tasks</p>
                  </div>
                </div>
              </a>            
            <%end%>
        </div>
  </div>
</section>